
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- bean definitions here -->
    <!--//using constructor method-->

    <bean id="movie1" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Neelanshi" type="String" index="0"></constructor-arg>
        <constructor-arg name="gender" value="female" type="String" index="1"></constructor-arg>
        <constructor-arg name="age" value="23" type="int" index="2"></constructor-arg>
    </bean>


    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Shubhank" type="String" index="0"></constructor-arg>
        <constructor-arg name="gender" value="male" type="String" index="1"></constructor-arg>
        <constructor-arg name="age" value="26" type="int" index="2"></constructor-arg>
    </bean>


    <bean id="movie3" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor3"></constructor-arg>

    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor" scope="singleton">
        <constructor-arg name="name" value="Ridhima" type="String" index="0"></constructor-arg>
        <constructor-arg name="gender" value="female" type="String" index="1"></constructor-arg>
        <constructor-arg name="age" value="24" type="int" index="2"></constructor-arg>
    </bean>


    <bean id="movie4" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor3" ></constructor-arg>

    </bean>
